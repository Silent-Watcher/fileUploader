<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%- title %></title>
		<link rel="stylesheet" href="css/style.css"/>
	</head>
	<body class="flex flex-col items-center content-center min-h-full overflow-x-hidden bg-white select-none dark:bg-gray-800 dark:text-white text-gray-950">
		<main class="container flex flex-wrap items-start content-center min-h-screen text-center">
			<!-- left section-start -->
			<div class="w-full text-center md:w-1/2 md:mx-auto">
				<!-- header-start -->
				<h1 class="my-10 mb-4 text-3xl font-extrabold leading-none tracking-tight lg:text-5xl">Express <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">File Uploader</span> 😍</h1>
				<!-- header-end -->
				<!-- input-start -->
				<div class="flex flex-col items-center justify-center w-full text-center">
					<form action="/uploads" , method="POST" enctype="multipart/form-data" class="w-full">
						<label for="dropzone-file" class="flex flex-col items-center justify-center w-[80%]  h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-bray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600 mt-12 mx-auto">
							<div class="flex flex-col items-center justify-center pt-5 pb-6">
								<svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
								</svg>
								<p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
								<p class="text-xs text-gray-500 dark:text-gray-400">JPEG, PNG, JPG or WEBP (MAX. 800x400px)</p>
							</div>
							<input id="dropzone-file" type="file" class="hidden" accept="image/*" name="image" required/>
						</label>
						<button id="submitBtn" type="submit" class="px-5 py-3 mt-8 mb-2 mr-2 text-base font-medium text-center text-white rounded-lg bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800">Upload</button>
					</form>
					<div id="preview__wrapper" class="relative flex-col hidden mt-5">
						<button type="button" class=" closeBtn ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700 absolute right-[37%]" data-dismiss-target="#toast-default" aria-label="Close">
							X
						</button>
						<img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image.jpg" alt="ss" id="preview__img" class="w-1/4 h-auto mx-auto rounded-lg">
						<p class="mt-5" id="preview__img-title">ss</p>
					</div>
				</div> 
				<!-- input-end -->
			</div>
			<!-- left section-end -->
			<!-- right section-start -->
			<div class="w-full p-10 md:w-1/2 md:mx-auto">
				<!-- heading-start -->
				<h2 class="mt-3 mb-4 text-3xl font-extrabold text-gray-900 md:mt-0 dark:text-white lg:text-5xl"><span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Images</span>📷</h2>
				<!-- heading-end -->
				<!-- gallery start -->
				
					<% if (Object.values(images).length > 0) { %>
						<div class="grid grid-cols-2 gap-4 mt-10 md:grid-cols-3">
							<% images.forEach((image,index) => { %>
								<div class="relative">
									<button type="button" class="closeBtn ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700 absolute top-0 right-0" data-dismiss-target="#toast-default" aria-label="Close">
										X
									</button>
									<img class="h-auto max-w-full rounded-lg" src="<%- image.path %>" alt="img-<%- index %>">
								</div>
							<% }) %>
						</div>
					<% } else { %>
						<p>
							<lottie-player class="mx-auto" src="https://assets5.lottiefiles.com/packages/lf20_r1gncjwd.json" background="transparent" speed="1" style="width: 200px; height: 200px" loop="" autoplay=""></lottie-player>
						</p>
					<% } %>
					 
			
				<!-- gallery end -->
			</div>
			<!-- right section-end -->
			<!-- footer-start -->
			<footer class="w-full mb-5 text-center md:mb-0 md:mt-15">
				<p>made with 💚 and 🍵 by <a target="_blank" rel="author" href="https://ali-nazari.netlify.app/" class="font-medium text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 hover:underline">Ali.t.nazari</a></p>
			</footer>
			<!-- footer-end -->
		</main>
	</body>
	<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
	<script src="js/app.js"></script>
</html>
